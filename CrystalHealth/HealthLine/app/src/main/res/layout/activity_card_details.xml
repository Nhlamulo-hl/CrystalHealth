<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".cardDetails">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView78"
                android:layout_width="75dp"
                android:layout_height="62dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/hp2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/left_arrow" />

            <ImageView
                android:id="@+id/imageView43"
                android:layout_width="276dp"
                android:layout_height="188dp"
                android:layout_marginBottom="660dp"
                android:alpha="0.9"
                android:rotationY="8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/undraw_credit_card_payments_re_qboh" />


            <TextView
                android:id="@+id/textView27"
                android:layout_width="120dp"
                android:layout_height="41dp"
                android:layout_marginTop="76dp"
                android:alpha="0.9"
                android:fontFamily="@font/inknut_antiqua_medium"
                android:rotation="-20"
                android:rotationY="12"
                android:text="Card Details"
                android:textColor="#070707"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/imageView43"
                app:layout_constraintHorizontal_bias="0.275"
                app:layout_constraintStart_toStartOf="@+id/imageView43"
                app:layout_constraintTop_toTopOf="@+id/imageView43" />

            <ImageView
            android:id="@+id/imageView55"
            android:layout_width="421dp"
            android:layout_height="365dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="288dp"
            android:alpha="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/caduceus" />


            <ImageView
                android:id="@+id/lotus8"
                android:layout_width="242dp"
                android:layout_height="229dp"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="272dp"
                android:alpha="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/lotus__1_" />

            <com.braintreepayments.cardform.view.CardForm
                android:id="@+id/cardForm"
                android:layout_width="350dp"
                android:layout_height="450dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:backgroundTint="@drawable/button"
                android:text="Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>